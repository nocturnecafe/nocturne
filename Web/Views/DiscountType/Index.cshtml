@model Web.Models.DiscountTypeIndexViewModel

@{
    Model.Title = "Discount types";
}

<p>
    @Html.ActionLink("Add new discount type", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DiscountTypes.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiscountTypes.FirstOrDefault().IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.DiscountTypes) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id })           
        </td>
    </tr>
}

</table>
