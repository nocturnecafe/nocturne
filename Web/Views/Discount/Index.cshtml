@model IEnumerable<Nocturne.Common.Models.Discount>

@{
    ViewBag.Title = "Discounts";
}

<h2>Discounts</h2>

<p>
    @Html.ActionLink("Add new discount", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Product
        </th>
        <th>
            Discount Type
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountPercent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiscountType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountPercent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
