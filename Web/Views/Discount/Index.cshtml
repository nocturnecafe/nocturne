@model Web.Models.DiscountIndexViewModel

@{
    Model.Title = "Discounts";
}

<h2>Discounts</h2>

<p>
    @Html.ActionLink("Add new discount", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Product
        </th>
        <th>
            Discount Type
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discounts.FirstOrDefault().AmountPercent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discounts.FirstOrDefault().IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Discounts) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiscountType.Name.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountPercent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
